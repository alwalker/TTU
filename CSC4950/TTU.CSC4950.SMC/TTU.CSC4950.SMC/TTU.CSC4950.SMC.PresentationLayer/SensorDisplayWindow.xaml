<Window x:Class="TTU.CSC4950.SMC.PresentationLayer.SensorDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sensor Readings" Height="110" Width="175" WindowStyle="ToolWindow" ResizeMode="NoResize" Loaded="Window_Loaded" Background="{StaticResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid>
        <StackPanel Name="stpSensorReadings" Orientation="Vertical" >
            <Label Name="lblTemperature" Content="Temperature: 555.55" Margin="0, 0, 0, 0" VerticalAlignment="Center" FontSize="15" />
            <Label Name="lblSpeed" Content="Motor Speed: 555.55" Margin="0, 5, 0, 0" VerticalAlignment="Center" FontSize="15"/>
        </StackPanel>
    </Grid>
</Window>
