<Window x:Class="TTU.CSC4950.SMC.PresentationLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="175" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Height="auto" HorizontalAlignment="Stretch" Margin="0,0,0,0" Name="stackPanel1" VerticalAlignment="Stretch" Width="auto" >
            <Button Content="New Batch" Height="46" Name="btnNewBatch" Width="125" Margin="0,5,0,0" Click="btnNewBatch_Click" />
            <Button Content="Add/Edit Batch Types" Height="46" Name="btnAddEditBatchTypes" Width="125" Margin="0,5,0,0" Click="btnAddEditBatchTypes_Click" />
            <Button Content="History" Height="46" Name="btnHistory" Width="125" Margin="0,5,0,0" Click="btnHistory_Click" />
            <Button Content="View Sensors" Height="46" Name="btnViewsensors" Width="125" Margin="0,5,0,0" Click="btnViewsensors_Click" />
            <Button Content="Exit" Height="46" Name="btnExit" Width="125" Margin="0,5,0,0" Click="btnExit_Click" />
        </StackPanel>
    </Grid>
</Window>
