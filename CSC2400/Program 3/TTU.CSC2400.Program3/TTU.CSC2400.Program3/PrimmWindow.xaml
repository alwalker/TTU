<Window x:Class="TTU.CSC2400.Program3.PrimmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PrimmWindow" Height="130" Width="300" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="54*" />
            <RowDefinition Height="52*" />
        </Grid.RowDefinitions>
        
        <Button Content="Ok" Height="23" HorizontalAlignment="Left" Margin="5,20,0,0" Name="btnOK" VerticalAlignment="Top" Width="75" Grid.Row="1" Click="btnOK_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" Margin="0,21,5,0" Name="btnClose" VerticalAlignment="Top" Width="75" Grid.Row="1" Click="btnClose_Click" />
        <Label Content="Start Node:" HorizontalAlignment="Left" Margin="10,10,0,0" Name="lblStart" VerticalAlignment="Top" />
        <ComboBox Height="24" HorizontalAlignment="Left" Margin="86,12,0,0" Name="cboStartNode" VerticalAlignment="Top" Width="76" SelectionChanged="cboStartNode_SelectionChanged" />
    </Grid>
</Window>
